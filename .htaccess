RewriteEngine On

# Remove legacy /gitlive/ prefix from public URLs
RewriteCond %{THE_REQUEST} \s/+gitlive/([^\s?]*) [NC]
RewriteRule ^gitlive/(.*)$ /$1 [R=301,L]

# Handle exact /gitlive path
RewriteRule ^gitlive/?$ / [R=301,L]

# Always serve dynamic sitemap at /sitemap.xml
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Always serve dynamic SEO local structure at /seo-local-deratisation-94.json
RewriteRule ^seo-local-deratisation-94\.json$ seo-local-deratisation-94.php [L]
